<h1>Authors#index</h1>
<p>Find me in app/views/authors/index.html.erb</p>


<%= link_to "Add an Author", new_author_path %>
<div>
<ul>
<% @authors.each do |author| %>

<li>ID: <%= author.id %> Author: <%= author.first_name %> <%= author.last_name %>
Age: <%= author.age %>
<%= link_to "show", author_path(author) %>
<%= link_to "edit", edit_author_path(author) %>
<%= link_to "remove", author_path(author), method: :delete, data: {confirm: "Are you sure?"} %></li>
<% end %>
</ul>
</div>